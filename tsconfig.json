{
  "compilerOptions": {
    "module": "umd",
    "target": "ES6",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": false,
    "moduleResolution": "node",
    "lib": ["dom", "es2017"]
  },
  "scripts": {
    "test": "mocha --require ts-node/register tests/**/*.ts"
  },
  "exclude": [
    "source",
    "node_modules",
    "bower_components",
    "lib"
  ]
}